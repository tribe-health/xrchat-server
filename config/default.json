{
  "#WARNING": "DO NOT WRITE any secrets here, just write env variable names in the vlaues like below",
  "#Development": "for development config, fill config/development.json, and dont commit secrets to git",
  "host": "localhost",
  "port": 3030,
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "authentication": {
    "entity": "identity-provider",
    "service": "identity-provider",
    "secret": "rlHRymcnyXeCbTcgHZB5TfG3dZg=",
    "authStrategies": [
      "jwt",
      "local"
    ],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://myxr.chat",
      "issuer": "feathers",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "usernameField": "email",
      "passwordField": "password"
    },
    "oauth": {
      "redirect": "/",
      "auth0": {
        "key": "AUTH0_KEY",
        "secret": "AUTH0_SECRET",
        "subdomain": "AUTH0_SUBDOMAIN"
      },
      "google": {
        "key": "GOOGLE_CLIENT_ID",
        "secret": "GOOGLE_CLIENT_SECRET",
        "scope": [
          "email",
          "profile",
          "openid"
        ]
      },
      "facebook": {
        "key": "FACEBOOK_CLIENT_ID",
        "secret": "FACEBOOK_CLIENT_SECRET",
        "scope": ["email, public_profile"]
      },
      "twitter": {
        "key": "TWITTER_KEY",
        "secret": "TWITTER_SECRET"
      },
      "github": {
        "key": "GITHUB_CLIENT_ID",
        "secret": "GITHUB_CLIENT_SECRET"
      }
    }
  },
  "aws": {
    "s3": {
      "static_resource_bucket": "STORAGE_S3_STATIC_RESOURCE_BUCKET",
      "region": "STORAGE_S3_REGION",
      "cloudfront": {
        "domain": "STORAGE_S3_CLOUDFRONT_DOMAIN"
      }
    },
    "keys": {
      "access_key_id": "STORAGE_AWS_ACCESS_KEY_ID",
      "secret_access_key": "STORAGE_AWS_ACCESS_KEY_SECRET"
    },
    "sns": {
      "region": "AWS_SMS_REGION",
      "sender_id": "AWS_SMS_SENDER_ID",
      "application_id": "AWS_SMS_APPLICATION_ID",
      "access_key_id": "AWS_SMS_ACCESS_KEY_ID",
      "secret_access_key": "AWS_SMS_SECRET_ACCESS_KEY"
    }
  },

  "magiclink": {
    "subject": "MAGICLINK_EMAIL_SUBJECT"
  },
  "mysql": "mysql://server:password@localhost:3306/xrchat"
}